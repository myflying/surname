@import "../../utils/bg.wxss";

.content-view {
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  justify-content: space-around;
}

.input-view {
  width: 580rpx;
  height: 725rpx;
  background: #f5f5f5;
  border: 10px solid #fff;
  margin-top: 100rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-img {
  width: 334rpx;
  height: 48rpx;
  margin-top: 50rpx;
}

.def-img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
}

.pre-txt {
  font-size: 32rpx;
  color: #555;
  margin-top: 15rpx;
}

.input-txt {
  width: 450rpx;
  height: 90rpx;
  background: #fff;
  border-radius: 3px;
  box-shadow: 0px 3px 0px #cdcdcd;
  margin-top: 36rpx;
  text-align: center;
  font-size: 32rpx;
}

.input-place {
  color: #999;
  text-align: center;
  font-size: 32rpx;
}

.create-view {
  width: 460rpx;
  height: 102rpx;
  margin-top: 50rpx;
  position: relative;
  align-items: center;
}

.create-img {
  width: 460rpx;
  height: 102rpx;
}

.create-btn {
  width: 460rpx;
  height: 102rpx;
  line-height: 96rpx;
  position: absolute;
  left: 0;
  top: 0;
  color: #fff;
  font-size: 36rpx;
  background: rgba(255,255,255,0)
}

button, button::after {
  border: 0;
}

.head-bg {
  width: 190rpx;
  height: 190rpx;
  border: 5rpx solid #fff;
  position: relative;
  z-index: 0;
  margin-top: 50rpx;
}

.bg-img {
  width: 190rpx;
  height: 190rpx;
  filter: blur(1px);
}

.head-view {
  width: 70rpx;
  height: 70rpx;
  border-radius:50%;
  overflow: hidden;
  position: absolute;
  left: 60rpx;
  top: 40rpx;
  z-index: 1;
  border: 2rpx solid #f8f8f8;
  opacity: 0.95;
}

.surname-txt {
  width: 200rpx;
  height: 42rpx;
  position: absolute;
  left: 0;
  bottom: 20rpx;
}

.float-view {
  position: absolute;
  z-index: 101;
  right: 0;
  top:11%;
}

.float-view-wrapper {
  position: relative;
  width: 200rpx;
  height: 112rpx;
}

.float-iamge {
  width: 200rpx;
  height: 112rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.nav-view {
  width: 190rpx;
  height: 146rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}

.ad {
  width: 100%;
  position: absolute;
  top: 75%;
}

.ad-show {
  width: 100%;
  height: 100%;
}